<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

    <appender name="ConsoleOut" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%r ms  %d{(dd-MM-yyyy HH:mm:ss)} [%level] %logger-%thread --> %msg%n</pattern>
        </encoder>
    </appender>

    <timestamp key="date" datePattern="dd-MM-yyyy"/>

    <appender name="FileOut" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs//BotAssistantStudent_${date}.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>BotAssistantStudent_%d{yyyy-MM-dd}.log.zip</fileNamePattern>
            <maxHistory>20</maxHistory>
            <totalSizeCap>1GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%r ms  %d{(dd-MM-yyyy HH:mm:ss)} [%level] %logger-%thread --> %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="ConsoleOut"/>
        <appender-ref ref="FileOut"/>
    </root>
</Configuration>